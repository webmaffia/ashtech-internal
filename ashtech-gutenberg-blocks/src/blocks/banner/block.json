{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "ashtech/banner",
  "title": "Ashtech Banner",
  "category": "ashtech",
  "icon": "cover-image",
  "description": "Hero banner section with animated SVG",
  "keywords": ["banner", "hero", "landing"],
  "textdomain": "ashtech-blocks",
  "editorScript": "file:./index.js",
  "style": "file:./style-index.css",
  "attributes": {
    "title": {
      "type": "string",
      "default": "Nature and Architecture<br>in Perfect Sync"
    },
    "scrollText": {
      "type": "string",
      "default": "(SCROLL)"
    }
  },
  "supports": {
    "html": false,
    "align": ["wide", "full"],
    "className": false,
    "customClassName": false
  }
}

